<%- include('partials/header.ejs'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="mb-3">
    <label for="heading" class="form-label">Title</label>
    <input id="heading" class="form-control" type="text" name="postTitle" />
  </div>

  <div class="mb-3">
    <label for="comment" class="form-label">Post</label>
    <textarea
    id="comment"
      class="form-control"
      name="postBody"
      cols="30"
      rows="5"></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include('partials/footer.ejs'); -%>
